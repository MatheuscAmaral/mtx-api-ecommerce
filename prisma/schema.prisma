generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String 
  cpf String @unique
  zip_code Int
  street String
  city String
  uf String
  number Int
  neighborhood String
  status Int @default(1)
  orders orders[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model products {
  product_id Int @id @default(autoincrement())
  image String
  title String
  price Decimal
  size Decimal
  category String
  flavor String
  type_pack String
  stock Int
  status Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())

  promotions promotions[]
  items_orders items_orders[]
}

model orders {
  order_id Int @id @default(autoincrement())
  total Decimal
  discounts Decimal
  client_id  Int
  client users @relation(fields: [client_id], references: [id])
  shipping_cost Decimal
  payment_method Int
  zip_code Int
  street String
  city String
  uf String
  number Int
  neighborhood String
  status Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())

  items_orders items_orders[]
}

model promotions {
  promotion_id Int @id @default(autoincrement())
  title String
  product_id Int
  product products @relation(fields: [product_id], references: [product_id])
  discount_type Int
  discount_value Decimal
  status Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model users_adm {
  id Int @id @default(autoincrement())
  user String @unique
  password String 
  level Int
  status Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model payment_methods {
  id Int @id @default(autoincrement())
  description String
  type Int
  status Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model items_orders {
  id Int @id @default(autoincrement())
  product_id Int
  product products @relation(fields: [product_id], references: [product_id])
  order_id Int
  order orders @relation(fields: [order_id], references: [order_id])
  quantity_ordered Int
  quantity_served Int
  discount_type Int
  discount_value Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model gateways {
  id Int @id @default(autoincrement())
  description String 
  status Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}